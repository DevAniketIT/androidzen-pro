# AndroidZen Pro - Environment Configuration Template
# Copy this file to .env and update with your actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=AndroidZen Pro
APP_VERSION=1.0.0
DEBUG=True
SECRET_KEY=your-secret-key-here-change-this-in-production

# Server Configuration
HOST=localhost
PORT=8000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Development Database (SQLite) - Default
DATABASE_URL=sqlite:///database/androidzen.db

# Production Database (PostgreSQL) - Uncomment and configure for production
# DATABASE_URL=postgresql://username:password@localhost:5432/androidzen

# Individual Database Settings (alternative to DATABASE_URL)
DATABASE_NAME=androidzen
DATABASE_USER=your_username
DATABASE_PASSWORD=your_password
DATABASE_HOST=localhost
DATABASE_PORT=5432

# Database Pool Settings
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API Keys (if needed)
# EXTERNAL_API_KEY=your-api-key-here
# OAUTH_CLIENT_ID=your-oauth-client-id
# OAUTH_CLIENT_SECRET=your-oauth-client-secret

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=detailed
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
CACHE_TYPE=simple
# REDIS_URL=redis://localhost:6379/0  # If using Redis for caching

# =============================================================================
# EMAIL CONFIGURATION (if applicable)
# =============================================================================
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=your-email@example.com
# MAIL_PASSWORD=your-app-password
# MAIL_DEFAULT_SENDER=your-email@example.com

# =============================================================================
# EXTERNAL SERVICES (if applicable)
# =============================================================================
# Android Device Database API
# DEVICE_API_URL=https://api.device-database.com
# DEVICE_API_KEY=your-device-api-key

# Performance Benchmarking Service
# BENCHMARK_API_URL=https://api.benchmark-service.com
# BENCHMARK_API_KEY=your-benchmark-api-key

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable/disable features for development
ENABLE_DEBUG_TOOLBAR=True
ENABLE_PROFILING=False
ENABLE_TESTING_ENDPOINTS=True

# CORS Settings (for development)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=True

# =============================================================================
# FILE STORAGE
# =============================================================================
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16MB
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,txt,csv,json

# =============================================================================
# MONITORING & ANALYTICS (if applicable)
# =============================================================================
# SENTRY_DSN=your-sentry-dsn-here
# GOOGLE_ANALYTICS_ID=your-ga-id-here

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
# Docker environment settings
DOCKER_ENV=development
DOCKER_REGISTRY=your-registry.com
DOCKER_IMAGE_TAG=latest

# Database settings for Docker
POSTGRES_DB=androidzen
POSTGRES_USER=androidzen_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis settings for Docker
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================
# Production environment settings
ENVIRONMENT=development
DOMAIN=localhost
PRODUCTION_URL=https://your-domain.com
API_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# SSL Configuration (for production)
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/private/key.pem

# Nginx Configuration
NGINX_CLIENT_MAX_BODY_SIZE=16M
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
TESTING=False
TEST_DATABASE_URL=sqlite:///database/test_androidzen.db
