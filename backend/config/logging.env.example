# Logging Configuration Environment Variables
# Copy this file to .env and adjust values as needed

# Basic logging configuration
DEBUG=false
LOG_LEVEL=INFO
LOG_FORMAT=console  # "console" for development, "structured" for production

# Log files (set to enable file logging)
LOG_FILE=./logs/androidzen-pro.log
MAX_LOG_FILE_SIZE=10485760  # 10MB in bytes
LOG_BACKUP_COUNT=5

# Request logging
LOG_REQUESTS=true
LOG_RESPONSES=true
LOG_REQUEST_BODY=false  # Enable with caution - may log sensitive data
LOG_RESPONSE_BODY=false

# Performance monitoring
ENABLE_PERFORMANCE_MONITORING=true
SLOW_REQUEST_THRESHOLD=1000  # milliseconds
PERFORMANCE_METRICS_RETENTION=24  # hours

# Error tracking
ENABLE_ERROR_TRACKING=true
MAX_ERROR_HISTORY=1000

# Security logging
ENABLE_SECURITY_LOGGING=true
LOG_AUTH_ATTEMPTS=true
LOG_SUSPICIOUS_ACTIVITY=true

# Monitoring and alerting
HEALTH_CHECK_INTERVAL=60  # seconds
CPU_ALERT_THRESHOLD=80    # percentage
MEMORY_ALERT_THRESHOLD=80 # percentage
DISK_ALERT_THRESHOLD=90   # percentage

# Database logging (if using PostgreSQL/MySQL for logs)
# LOG_DATABASE_URL=postgresql://user:pass@localhost/logs
# LOG_TABLE_PREFIX=androidzen_

# External monitoring services (optional)
# SENTRY_DSN=https://your-sentry-dsn
# DATADOG_API_KEY=your-datadog-key
# NEW_RELIC_LICENSE_KEY=your-newrelic-key

# Log retention and cleanup
LOG_RETENTION_DAYS=30
METRICS_RETENTION_DAYS=7
AUTO_CLEANUP_ENABLED=true
CLEANUP_SCHEDULE=0 2 * * *  # Daily at 2 AM (cron format)
