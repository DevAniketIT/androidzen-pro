[bandit]
# Bandit configuration file for AndroidZen backend security scanning

# Test skips - be very careful about what you skip
skips = []

# Tests to exclude (use sparingly and with justification)
exclude_dirs = [
    "backend/tests",
    "backend/alembic/versions",
    "venv",
    ".venv",
    "node_modules",
    ".git"
]

# Confidence levels: LOW, MEDIUM, HIGH
confidence = HIGH

# Severity levels: LOW, MEDIUM, HIGH
level = LOW

# Output format options: csv, json, txt, html, xml, yaml
format = json

# Report only issues of a given severity level or higher
severity = LOW

# Maximum number of lines of code to scan (0 = unlimited)
max_lines_per_file = 0

# Tests to run (leave empty to run all tests)
