# AndroidZen Pro - Frontend Environment Configuration Template
# Copy this file to .env and update with your actual values

# =============================================================================
# REACT APPLICATION SETTINGS
# =============================================================================

# API Configuration
REACT_APP_API_URL=http://localhost:8000/api/v1
REACT_APP_WS_URL=ws://localhost:8000/ws

# Application Version (automatically set during build)
REACT_APP_VERSION=1.0.0

# Environment
NODE_ENV=development

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable development features
GENERATE_SOURCEMAP=true

# Development server configuration
PORT=3000
HOST=localhost

# Browser settings
BROWSER=chrome

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# SSL settings (for HTTPS development)
# HTTPS=true
# SSL_CRT_FILE=path/to/cert.crt
# SSL_KEY_FILE=path/to/cert.key

# =============================================================================
# BUILD OPTIMIZATION
# =============================================================================

# Bundle analyzer (set to true to analyze build)
ANALYZE=false

# Disable source maps in production
GENERATE_SOURCEMAP=false

# =============================================================================
# MONITORING & ANALYTICS (Optional)
# =============================================================================

# Sentry DSN for error monitoring
# REACT_APP_SENTRY_DSN=your-sentry-dsn-here

# Google Analytics ID
# REACT_APP_GA_ID=your-ga-id-here

# Application Insights (Azure)
# REACT_APP_APPINSIGHTS_KEY=your-app-insights-key

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
REACT_APP_ENABLE_AI_ANALYTICS=true
REACT_APP_ENABLE_REAL_TIME=true
REACT_APP_ENABLE_STORAGE_OPTIMIZER=true
REACT_APP_ENABLE_DEVICE_AUTOMATION=true
REACT_APP_ENABLE_PREMIUM_FEATURES=true

# Debug features
REACT_APP_ENABLE_DEBUG_MODE=false
REACT_APP_SHOW_REDUX_DEVTOOLS=false

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================

# Map services
# REACT_APP_GOOGLE_MAPS_API_KEY=your-google-maps-key

# File upload services
# REACT_APP_CLOUDINARY_CLOUD_NAME=your-cloudinary-name
# REACT_APP_CLOUDINARY_API_KEY=your-cloudinary-key

# Social authentication
# REACT_APP_GOOGLE_CLIENT_ID=your-google-oauth-client-id
# REACT_APP_FACEBOOK_APP_ID=your-facebook-app-id

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# React DevTools Profiler
REACT_APP_ENABLE_PROFILER=false

# Bundle size analysis
ANALYZE_BUNDLE=false

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Test environment settings
CI=false
WATCHMAN_DISABLE_TIMEOUT=true

# Coverage settings
COVERAGE_THRESHOLD_BRANCHES=70
COVERAGE_THRESHOLD_FUNCTIONS=70
COVERAGE_THRESHOLD_LINES=70
COVERAGE_THRESHOLD_STATEMENTS=70
